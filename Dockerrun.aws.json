{
  "AWSEBDockerrunVersion": "1",
  "Containers": [
      {
          "Name": "myapp",
          "Image": {
              "Name": "${ECR_REGISTRY}/${ECR_REPOSITORY}:${IMAGE_TAG}",
              "Update": "true"
          },
          "Ports": [
              {
                  "ContainerPort": "3000"
              }
          ]
      },
      {
          "Name": "nginx",
          "Image": "nginx:alpine",
          "Ports": [
              {
                  "ContainerPort": "80"
              }
          ],
          "VolumesFrom": ["myapp"]
      }
  ]
}